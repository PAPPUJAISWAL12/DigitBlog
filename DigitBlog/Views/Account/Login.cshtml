@model UserListEdit
@{
    ViewData["title"] = "Login";
}
<div class="max-w-md mx-auto">
    <form asp-action="Login">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="relative mb-3">
            <input asp-for="LoginName" class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " required />
            <label asp-for="LoginName" class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6"></label>
            <span asp-validation-for="LoginName" class="text-red-800"></span>
        </div>
        <div class="relative mb-3">
            <input asp-for="LoginPassword" class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " required />
            <label asp-for="LoginPassword" class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6"></label>
            <span asp-validation-for="LoginPassword" class="text-red-800"></span>
        </div>
        <div class="my-2 mt-5">
            <input type="submit" value="Login" class="w-full text-white bg-blue-500 hover:bg-blue-700 py-3 px-5 rounded-lg"/> 
        </div>
    </form>
    <div class="my">
        <a asp-action="ForgotPassword" asp-controller="Account">Forgot Password?</a>
    </div>
</div>