@model UserListEdit
@{
    ViewData["title"] = "Verrify Token";
}


<div class="max-w-md mx-auto">
    <form asp-action="ForgotPassword">
        <div asp-validation-summary="ModelOnly" class="text-red-800 mb-3"></div>
        <div class="relative mb-3">
            <input asp-for="Token" class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " required />
            <label asp-for="Token" class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6"></label>
            <span asp-validation-for="Token" class="text-red-800"></span>
        </div>
        <div class="mb-2">
            <input type="submit" value="Submit" class="text-white py-3 px-5 rounded-lg bg-blue-600 hover:bg-blue-800">
        </div>
    </form>
</div>